{% extends "layout.njk" %}

{% block content %}
    <section class="content">
        <div class="banner">
            <div class="text-banner">
                <h2>As melhores receitas</h2>
                <p>Aprenda a construir os melhores pratos
                    <br/>
                    com receitas criadas por profissionais
                    <br/>
                    do mundo inteiro.</p>
            </div>
            <img src="/assets/chef.png" alt="Chef">
        </div>
    </section>
    <div class="h2-cardapio">
        <h2>Mais acessadas</h2>
    </div>
        <section class="menu">

            {%for item in items%}
                <div class="card" id="{{item.id}}">
                    <img src="{{item.image}}" alt="{{item.title}}" class="cardapio-img" id="{{item.id}}">
                    <h3>{{item.title}}</h3>
                    <p class="text">por
                        {{item.author}}</p>
                </div>
            {% endfor %}
        </section>
{% endblock %}