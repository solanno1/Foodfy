{% extends "layout.njk" %}

{% block content %}
    <section class="content">
        <div class="recipes">
            <img src="{{items.image}}" alt="{{items.title}}">
        </div>
    </section>
    <div class="title">
        <h1>{{items.title}}</h1>
        <p>{{items.author}}</p>
    </div>

    <div class="toggle">
        <h2>Ingredientes</h2>
        <p class="hide-ingredientes">ESCONDER</p>
    </div>

    <div class="ingredientes">
        <ul>
            {%for ingredient in items.ingredients%}
            <li>{{ingredient}}</li>
            {%endfor%}
        </ul>
    </div>

    <div class="toggle">
        <h2>Modo de preparo</h2>
        <p class="hide-preparo">ESCONDER</p>
    </div>
    <div class="preparo">
        <ol>
            {%for prepare in items.preparation%}
            <li>{{prepare}}</li>
            {%endfor%}
        </ol>
    </div>

    <div class="toggle">
        <h2>Informações adicionais</h2>
        <p class="hide-info">ESCONDER</p>
    </div>
    <div class="info">
        <p class="test">
            {{items.information}}
        </p>
    </div>
{% endblock %}